{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@type/*": ["type/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
